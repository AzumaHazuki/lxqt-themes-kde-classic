/* The main Leave dialog window */
QDialog {
	color:				#000000;
	background:			#efefef;

	border:				1px solid #8d8d8d;
}

/* Caption colors */
QLabel {
	color:				#000000;
	background:			transparent;

	padding:			8px;
}

/* Available actions - only partially themeable as of LXQt 1.2.x */
QAbstractItemView {
	color:				#000000;
	background:			#ffffff; /* This doesn't work for some reason... */
	background-image:		url(assets/menus/bg.png); /* ...but this does! */

	border:				1px solid #8d8d8d;
}

/* Button settings */
QPushButton {
	color:                          #000000;
	background:                     qlineargradient(x1:0, y1:0, x2:0, y2:1 stop:0 #e5e7ec, stop:1 #d2d3d9);

	border:                         3px solid transparent;
	border-image:                   url(assets/buttons/button.png) 3px;

        padding-left:                   24px;
        padding-right:                  24px;
        padding-top:                    4px;
        padding-bottom:			4px;

	margin-left:			10px;
	margin-right:			10px;
}

QToolButton {
	color:                          #000000;
	background:                     qlineargradient(x1:0, y1:0, x2:0, y2:1 stop:0 #e5e7ec, stop:1 #d2d3d9);

	border:                         3px solid transparent;
	border-image:                   url(assets/buttons/button.png) 3px;

        padding-left:                   6px;
        padding-right:                  6px;
        padding-top:                    4px;
        padding-bottom:			4px;

	margin-left:			10px;
	margin-right:			10px;
}

QPushButton:hover, QToolButton:hover {
       	color:                          #000000;
       	background:                     qlineargradient(x1:0, y1:0, x2:0, y2:1 stop:0 #e5e7ec, stop:1 #d2d3d9);

       	border:                         3px solid transparent;
       	border-image:                   url(assets/buttons/button.png) 3px;
}

QPushButton:pressed, QToolButton:pressed {
       	color:                          #000000;
       	background:                     qlineargradient(x1:0, y1:0, x2:0, y2:1 stop:0 #a6a8ab, stop:1 #adafb2);

       	border:                         3px solid transparent;
       	border-image:                   url(assets/buttons/active.png) 3px;
}
